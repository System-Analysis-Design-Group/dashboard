<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/arrow_left"/>

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="必胜客宅急送" />
    </LinearLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tab_shopdetail"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabTextColor="#666666"
        app:tabSelectedTextColor="#0414f6"
        app:tabIndicatorColor="#0414f6"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_shopdetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <LinearLayout
        android:baselineAligned="false"
        android:id="@+id/bottom_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bottom_linearLayout_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/price_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_linearLayout_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/left_or_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="差10元"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>